<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="sequential execution of tests" verbose="1" parallel="methods" thread-count="1">
    <test name="Create New Customer tests web">
        <classes>
            <class name="com.betamedia.atom.testslibrary.option24.web.createnewcustomers.CreateNewCustomers" >
                <methods>
                    <include name="verifySignUpButtonRedirectToOnboardingOpenAccount"/>
                    <include name="applyForAnAccountElementsVerification"/>
                    <include name="applyForAnAccountFirstNameFieldValidations"/>
                    <include name="applyForAnAccountLastNameFieldValidations"/>
                    <include name="emailFieldValidations"/> <!-- fails as email field is not green even if it is valid -->
                    <include name="prefixFieldValidations"/>
                    <include name="phoneFieldValidations"/>
                    <include name="countryDropdownFieldSearchEngine"/>
                    <include name="countryDropdownValidations"/>
                    <include name="currencyDropdownFieldValidation"/>
                    <include name="passwordFieldsValidation"/>
                    <include name="agreementCheckboxValidation"/>
                    <include name="submitButtonValidation"/>
                    <include name="validateConnectionInDBForDifferentCustomersButSameCreditCard"/>
                    <include name="validateConnectionInDBForDifferentCustomersButSamePhone"/>
                    <include name="validateNoConnectionsInDBForDifferentCustomersWithSameFirstAndLastNames"/>
                    <include name="validateNoConnectionsInDBForDifferentCustomersWithSameEmail"/> <!-- Test fails as impossible create user with the same email -->
                    <include name="validateNoConnectionsInDBForDifferentCustomersWithSameMachineID"/>
                    <include name="validateBulkEmailHasNoneZeroForNewCreatedCustomer"/>
                    <include name="validatePhoneCallsForNewCreatedCustomer"/> <!-- Fails as during user creation ContactBase.DoNotPhone = 0 value -->
                    <include name="validateCustomerCreationSourceId"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
