<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Suite: verify Personal Details Slide" verbose="1">
    <test name="Tryouts">
        <classes>
             <class name="com.betamedia.atom.testslibrary.option24.web.ctw.PersonalDetailsSlideTest">
                <methods>
                <parameter name="countrycode" value="de"/>
                    <include name="verifySlideAppearAfterRegistrationAndWelcomeSlide" />
                    <include name="verifySubmitButtonIsMandatoryForMovingFwd" /> 
                    <include name="verifyAll3FieldsAreMandatory" />                    
                    <include name="verifySubmitButtonEnableWhenAllFieldsAreFilled" />
                    <include name="clickOnSubmitMovesYouToFNSFirstSlide" />                    
                    <include name="verifySelectionChangesDropDownColor" /> 
                    <include name="verifyOpeningDropDownsChangesArrowDirection" />
                    <include name="VerifyDateOofBirthDropDownFunctionality" />
                </methods>
             </class>
           <class name="com.betamedia.atom.testslibrary.option24.web.ctw.ReflectionInCRMTest">
                <methods>
                    <parameter name="countrycode" value="de"/>
                    <include name="verifyThe3FieldsUpdateInTheCRM" />
                </methods>
            </class> 
            <class name="com.betamedia.atom.testslibrary.option24.web.ctw.PersonalDetailsSlideLocalisationTest">
                <methods>
                    <parameter name="countrycode" value="de"/>
                    <include name="verifyTheSlideTurnsRTLOnAR" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
